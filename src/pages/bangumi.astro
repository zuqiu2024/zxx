// è·å–Bangumiæ•°æ®çš„å‡½æ•° - æ”¯æŒåˆ†é¡µè·å–æ‰€æœ‰æ•°æ®
async function fetchBangumiData(username: string, subjectType: number) {
	try {
		const { limit, delay, maxTotal } = bangumiConfig.pagination;
